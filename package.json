{
  "name": "numara",
  "productName": "Numara",
  "description": "Numara Calculator",
  "version": "3.18.5",
  "author": {
    "name": "Timur Atalay",
    "email": "mail@numara.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/bornova/numara-calculator",
  "main": "src/js/main.js",
  "scripts": {
    "prebuild": "npm run prettier && npm run lint",
    "build": "node build",
    "dist": "npm run build && electron-builder",
    "dist-all": "npm run build && electron-builder -mwl",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "publish": "npm run build && electron-builder -mwl -p always",
    "test": "npm run build && electron ."
  },
  "devDependencies": {
    "clean-css": "^5.3.2",
    "codemirror": "^5.65.12",
    "deep-diff": "^1.0.2",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "electron-builder-notarize": "^1.5.1",
    "eslint": "^8.36.0",
    "fs-extra": "^11.1.0",
    "lucide": "^0.125.0",
    "luxon": "^3.3.0",
    "mathjs": "^11.7.0",
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0",
    "prettier": "^2.8.4",
    "terser": "^5.16.6",
    "uikit": "^3.16.6"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "com.numara.app",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "afterSign": "electron-builder-notarize",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "mac": {
      "entitlements": "src/entitlements.mac.plist",
      "entitlementsInherit": "src/entitlements.mac.plist",
      "hardenedRuntime": true,
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "target": "nsis-web"
    },
    "nsisWeb": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "directories": {
      "buildResources": "build/assets",
      "output": "dist/${version}/${os}"
    },
    "files": [
      "build",
      "src/js/main.js"
    ]
  }
}
