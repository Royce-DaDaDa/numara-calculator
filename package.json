{
    "name": "numara",
    "productName": "Numara",
    "description": "Numara Calculator",
    "version": "3.1.2",
    "author": {
        "name": "Timur Atalay",
        "email": "mail@numara.io"
    },
    "license": "MIT",
    "homepage": "https://github.com/bornova/numara-calculator",
    "main": "src/js/main.js",
    "scripts": {
        "build": "node build.js",
        "test": "node build.js && electron .",
        "dist": "node build.js && electron-builder",
        "dist-all": "node build.js && electron-builder -mwl",
        "publish": "node build.js && electron-builder -mwl -p always"
    },
    "devDependencies": {
        "clean-css": "^5.1.0",
        "codemirror": "^5.59.3",
        "deep-diff": "^1.0.2",
        "electron": "^11.3.0",
        "electron-builder": "^22.9.1",
        "feather-icons": "^4.28.0",
        "fs-extra": "^9.1.0",
        "luxon": "^1.26.0",
        "mathjs": "^9.2.0",
        "mousetrap": "^1.6.5",
        "mousetrap-global-bind": "^1.1.0",
        "terser": "^5.6.0",
        "uikit": "^3.6.16"
    },
    "dependencies": {
        "electron-context-menu": "^2.5.0",
        "electron-store": "^7.0.2",
        "electron-updater": "^4.3.5",
        "electron-util": "^0.14.2"
    },
    "build": {
        "appId": "com.numara.app",
        "artifactName": "${productName}-${version}.${ext}",
        "publish": [
            {
                "provider": "github"
            }
        ],
        "mac": {
            "electronLanguages": [
                "en"
            ]
        },
        "win": {
            "target": "nsis-web"
        },
        "nsisWeb": {
            "oneClick": false,
            "deleteAppDataOnUninstall": true
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "directories": {
            "buildResources": "build/assets",
            "output": "dist/${version}/${os}"
        },
        "files": [
            "build",
            "src/js/main.js"
        ]
    }
}
