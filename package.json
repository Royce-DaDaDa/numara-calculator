{
    "name": "numara",
    "productName": "Numara",
    "description": "Numara Calculator",
    "version": "2.18.4",
    "author": "Timur Atalay",
    "license": "MIT",
    "homepage": "https://github.com/bornova/numara-calculator",
    "main": "src/js/main.js",
    "scripts": {
        "build": "node build.js",
        "test": "node build.js && electron .",
        "dist": "node build.js && electron-builder",
        "dist-all": "node build.js && electron-builder -m -w"
    },
    "devDependencies": {
        "clean-css": "^4.2.3",
        "codemirror": "^5.59.2",
        "deep-diff": "^1.0.2",
        "electron": "^11.2.1",
        "electron-builder": "^22.9.1",
        "feather-icons": "^4.28.0",
        "fs-extra": "^9.1.0",
        "luxon": "^1.25.0",
        "mathjs": "^9.0.0",
        "mousetrap": "^1.6.5",
        "mousetrap-global-bind": "^1.1.0",
        "terser": "^5.5.1",
        "uikit": "^3.6.12"
    },
    "dependencies": {
        "electron-context-menu": "^2.4.0",
        "electron-store": "^7.0.0",
        "electron-updater": "^4.3.5",
        "electron-util": "^0.14.2"
    },
    "build": {
        "appId": "com.numara.app",
        "nsisWeb": {
            "oneClick": false,
            "deleteAppDataOnUninstall": true
        },
        "win": {
            "target": "nsis-web",
            "publish": [
                {
                    "provider": "generic",
                    "url": "https://numara.io/releases/win/"
                }
            ],
            "artifactName": "${productName}-${version}.${ext}"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "electronLanguages": [
                "en"
            ],
            "publish": [
                {
                    "provider": "generic",
                    "url": "https://numara.io/releases/mac/"
                }
            ]
        },
        "directories": {
            "buildResources": "build/assets"
        },
        "files": [
            "build",
            "src/js/main.js",
            "src/js/menu.js"
        ]
    }
}
