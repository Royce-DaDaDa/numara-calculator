{
    "name": "numpad",
    "productName": "Numpad",
    "version": "1.5.3",
    "description": "Numpad Calculator",
    "main": "./js/main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "Timur Atalay",
    "license": "MIT",
    "devDependencies": {
        "electron": "^8.2.3",
        "electron-builder": "^22.5.1"
    },
    "dependencies": {
        "d3": "^3.5.17",
        "electron-context-menu": "^1.0.0",
        "fs-extra": "^9.0.0",
        "mathjs": "^6.6.4",
        "moment": "^2.24.0",
        "mousetrap": "^1.6.5",
        "plotly.js-basic-dist": "^1.53.0",
        "uikit": "^3.4.2"
    },
    "build": {
        "nsis": {
            "oneClick": false,
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": "dmg",
            "electronLanguages": [
                "en"
            ]
        },
        "directories": {
            "buildResources": "assets"
        },
        "files": [
            "assets",
            "css",
            "js",
            "numpad.html"
        ]
    }
}
