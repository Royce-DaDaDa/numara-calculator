{
    "name": "numpad",
    "productName": "Numpad",
    "version": "1.2.26",
    "description": "Numpad Calculator",
    "main": "./js/main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "Timur Atalay",
    "license": "MIT",
    "devDependencies": {
        "electron": "^7.1.11",
        "electron-builder": "^22.3.2"
    },
    "dependencies": {
        "electron-context-menu": "^0.15.2",
        "fs-extra": "^8.1.0",
        "mathjs": "^6.6.0",
        "moment": "^2.24.0",
        "mousetrap": "^1.6.5",
        "plotly.js-basic-dist": "^1.52.1",
        "uikit": "^3.3.0"
    },
    "build": {
        "nsis": {
            "oneClick": false,
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": "dmg",
            "electronLanguages": [
                "en"
            ]
        },
        "directories": {
            "buildResources": "assets"
        },
        "files": [
            "assets",
            "css",
            "js",
            "numpad.html"
        ]
    }
}
