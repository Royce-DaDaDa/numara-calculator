{
    "name": "numara",
    "productName": "Numara",
    "version": "2.1.0",
    "description": "Numara Calculator",
    "main": "src/js/main.js",
    "scripts": {
        "build": "node build.js",
        "dev": "npm run build && electron .",
        "test": "electron .",
        "dist": "npm run build && electron-builder"
    },
    "author": "Timur Atalay",
    "license": "MIT",
    "devDependencies": {
        "clean-css": "^4.2.3",
        "codemirror": "^5.58.1",
        "deep-diff": "^1.0.2",
        "electron": "^10.1.3",
        "electron-builder": "^22.9.1",
        "feather-icons": "^4.28.0",
        "mathjs": "^7.5.1",
        "moment": "^2.29.1",
        "mousetrap": "^1.6.5",
        "mousetrap-global-bind": "^1.1.0",
        "terser": "^5.3.5",
        "uikit": "^3.5.8"
    },
    "dependencies": {
        "electron-context-menu": "^2.3.0",
        "electron-log": "^4.2.4",
        "electron-store": "^6.0.1",
        "electron-updater": "^4.3.5",
        "electron-util": "^0.14.2",
        "fs-extra": "^9.0.1"
    },
    "build": {
        "nsis": {
            "oneClick": false,
            "deleteAppDataOnUninstall": true
        },
        "win": {
            "publish": [{
                "provider": "generic",
                "url": "https://numara.io/releases/win/"
            }]
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "electronLanguages": [
                "en"
            ],
            "publish": [{
                "provider": "generic",
                "url": "https://numara.io/releases/mac/"
            }]
        },
        "directories": {
            "buildResources": "build/assets"
        },
        "files": [
            "build",
            "src/js/main.js"
        ]
    }
}