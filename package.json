{
  "name": "numara",
  "productName": "Numara",
  "description": "Numara Calculator",
  "version": "3.9.0",
  "author": {
    "name": "Timur Atalay",
    "email": "mail@numara.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/bornova/numara-calculator",
  "main": "src/js/main.js",
  "scripts": {
    "lint": "eslint src/js/*.js",
    "build": "node build",
    "test": "node build && electron .",
    "dist": "node build && electron-builder",
    "dist-all": "node build && electron-builder -mwl",
    "publish": "node build && electron-builder -mwl -p always"
  },
  "devDependencies": {
    "clean-css": "^5.2.2",
    "codemirror": "^5.65.0",
    "deep-diff": "^1.0.2",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-builder-notarize": "^1.2.0",
    "eslint": "^8.5.0",
    "fs-extra": "^10.0.0",
    "lucide": "^0.16.22",
    "luxon": "^2.2.0",
    "mathjs": "^10.0.1",
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0",
    "terser": "^5.10.0",
    "uikit": "^3.9.4"
  },
  "dependencies": {
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.1",
    "electron-util": "^0.17.2"
  },
  "build": {
    "appId": "com.numara.app",
    "artifactName": "${productName}-${version}.${ext}",
    "afterSign": "electron-builder-notarize",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "src/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis-web"
    },
    "nsisWeb": {
      "oneClick": false,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "directories": {
      "buildResources": "build/assets",
      "output": "dist/${version}/${os}"
    },
    "files": [
      "build",
      "src/js/main.js"
    ]
  }
}
