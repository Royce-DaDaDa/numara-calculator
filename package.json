{
    "name": "numpad",
    "productName": "Numpad",
    "version": "1.5.19",
    "description": "Numpad Calculator",
    "main": "./js/main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "Timur Atalay",
    "license": "MIT",
    "devDependencies": {
        "electron": "^8.2.5",
        "electron-builder": "^22.6.0"
    },
    "dependencies": {
        "d3": "^3.5.17",
        "electron-context-menu": "^2.0.0",
        "fs-extra": "^9.0.0",
        "mathjs": "^6.6.5",
        "moment": "^2.25.3",
        "mousetrap": "^1.6.5",
        "uikit": "^3.4.4"
    },
    "build": {
        "nsis": {
            "oneClick": false,
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": "dmg",
            "electronLanguages": [
                "en"
            ]
        },
        "directories": {
            "buildResources": "assets"
        },
        "files": [
            "assets",
            "css",
            "js",
            "numpad.html"
        ]
    }
}
