{
  "name": "numara",
  "productName": "Numara",
  "description": "Numara Calculator",
  "version": "4.5.1",
  "author": {
    "name": "Timur Atalay",
    "email": "mail@numara.io",
    "url": "https://numara.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/bornova/numara-calculator",
  "main": "src/main.cjs",
  "type": "module",
  "scripts": {
    "prebuild": "npm run prettier && npm run lint",
    "build": "node build.js",
    "dist": "electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "publish": "electron-builder -p always",
    "test": "npm run build && electron .",
    "wiki": "node src/misc/wiki.js"
  },
  "devDependencies": {
    "@formulajs/formulajs": "^4.4.1",
    "codemirror": "^5.65.16",
    "deep-diff": "^1.0.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.20.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "function-plot": "^1.24.4",
    "lucide": "^0.321.0",
    "luxon": "^3.4.4",
    "mathjs": "^12.3.2",
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0",
    "prettier": "^3.2.5",
    "uikit": "^3.18.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.numara.app",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "directories": {
      "buildResources": "build/assets",
      "output": "dist/${version}/${os}"
    },
    "files": [
      "build",
      "src/main.cjs",
      "src/preload.cjs"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "entitlements": "src/misc/entitlements.mac.plist",
      "entitlementsInherit": "src/misc/entitlements.mac.plist",
      "hardenedRuntime": true,
      "notarize": {
        "teamId": "2VP53YFAQP"
      },
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "target": "nsis",
      "publisherName": "Timur Atalay",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
