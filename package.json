{
  "name": "numara",
  "productName": "Numara",
  "description": "Numara Calculator",
  "version": "3.12.0",
  "author": {
    "name": "Timur Atalay",
    "email": "mail@numara.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/bornova/numara-calculator",
  "main": "src/js/main.js",
  "scripts": {
    "prebuild": "npm run prettier && npm run lint",
    "build": "node build",
    "dist": "npm run build && electron-builder",
    "dist-all": "npm run build && electron-builder -mwl",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "publish": "npm run build && electron-builder -mwl -p always",
    "test": "npm run build && electron ."
  },
  "devDependencies": {
    "clean-css": "^5.3.0",
    "codemirror": "^5.65.5",
    "deep-diff": "^1.0.2",
    "electron": "^19.0.2",
    "electron-builder": "^23.0.3",
    "electron-builder-notarize": "^1.5.0",
    "eslint": "^8.16.0",
    "fs-extra": "^10.1.0",
    "lucide": "^0.57.0",
    "luxon": "^2.4.0",
    "mathjs": "^10.6.1",
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0",
    "prettier": "^2.6.2",
    "terser": "^5.14.0",
    "uikit": "^3.14.3"
  },
  "dependencies": {
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1"
  },
  "build": {
    "appId": "com.numara.app",
    "artifactName": "${productName}-${version}.${ext}",
    "afterSign": "electron-builder-notarize",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "mac": {
      "entitlements": "src/entitlements.mac.plist",
      "hardenedRuntime": true
    },
    "win": {
      "target": "nsis-web"
    },
    "nsisWeb": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "directories": {
      "buildResources": "build/assets",
      "output": "dist/${version}/${os}"
    },
    "files": [
      "build",
      "src/js/main.js"
    ]
  }
}
