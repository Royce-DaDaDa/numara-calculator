{
  "name": "numara",
  "productName": "Numara",
  "description": "Numara Calculator",
  "version": "4.0.6",
  "author": {
    "name": "Timur Atalay",
    "email": "mail@numara.io",
    "url": "https://numara.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/bornova/numara-calculator",
  "main": "src/js/main.cjs",
  "type": "module",
  "scripts": {
    "prebuild": "npm run prettier && npm run lint",
    "build": "rollup -c",
    "dist": "electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "publish": "electron-builder -p always",
    "test": "electron ."
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "builder-util": "^24.5.0",
    "clean-css": "^5.3.2",
    "codemirror": "^5.65.15",
    "deep-diff": "^1.0.2",
    "dotenv": "^16.3.1",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "fs-extra": "^11.1.1",
    "function-plot": "^1.23.3",
    "js-yaml": "^4.1.0",
    "lucide": "^0.272.0",
    "luxon": "^3.4.3",
    "mathjs": "^11.11.0",
    "mousetrap": "^1.6.5",
    "mousetrap-global-bind": "^1.1.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.1",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "uikit": "^3.16.26"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.numara.app",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "directories": {
      "buildResources": "build/assets",
      "output": "dist/${version}/${os}"
    },
    "files": [
      "build",
      "src/js/main.cjs"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "entitlements": "src/misc/entitlements.mac.plist",
      "entitlementsInherit": "src/misc/entitlements.mac.plist",
      "hardenedRuntime": true,
      "notarize": {
        "teamId": "2VP53YFAQP"
      },
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "target": "nsis-web"
    },
    "nsisWeb": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
